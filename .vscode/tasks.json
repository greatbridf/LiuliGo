{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build for linux",
      "type": "shell",
      "command": "cmd.exe /c \"build.bat\" && cp LiuliGo.cgi /var/www/cgi-bin/",
      "isBackground": true,
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      },
      "problemMatcher": [
        "$go"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }, {
      "label": "Build",
      "type": "shell",
      "command": "cmd.exe /c \"go build\"",
      "problemMatcher": [
        "$go"
      ],
    }
  ]
}